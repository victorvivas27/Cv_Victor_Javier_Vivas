<footer id="action-footer" class="no-print">
  <button id="btn-print" class="fab" aria-label="Imprimir / Guardar PDF">
    <!-- ícono impresora -->
    <svg
      width="22"
      height="22"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="1.6"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M6 9V3h12v6"></path>
      <path
        d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"
      ></path>
      <path d="M6 14h12v7H6z"></path>
    </svg>
    <span>Imprimir</span>
  </button>
</footer>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const printBtn = document.getElementById("btn-print");
    printBtn?.addEventListener(
      "click",
      () => {
        window.print(); 
      },
      { passive: true },
    );
  });
</script>

<style>
  /* Footer fijo y simple */
  #action-footer {
    position: fixed;
    bottom: 12px;
    right: 12px;
    z-index: 10000;
  }

  .fab {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #111827;
    color: #fff;
    border: 1px solid #0b1220;
    border-radius: 999px;
    padding: 10px 14px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
    cursor: pointer;
    transition:
      transform 0.15s ease,
      box-shadow 0.15s ease,
      background 0.15s ease;
    -webkit-tap-highlight-color: transparent;
  }

  .fab:hover {
    transform: translateY(-1px);
    box-shadow: 0 10px 22px rgba(0, 0, 0, 0.18);
  }
  .fab:active {
    transform: translateY(0px) scale(0.98);
  }

  .fab svg {
    display: block;
  }

  .fab span {
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.2px;
  }

  @media (max-width: 520px) {
    .fab span {
      display: none;
    } /* solo ícono en móviles */
  }

  @media print {
    #action-footer {
      display: none !important;
    }
  }
</style>
