---
import Section from "@/components/Section.astro";
import { work } from "@cv";
const {} = work;
---

<Section title="Experiencia laboral">
  <ul class="experience-list">
    {
      work.map(({ name, position, url, startDate, endDate, summary }) => {
        const formatDate = (date: string | number | Date) =>
          new Date(date)
            .toLocaleDateString("es-ES", {
              year: "numeric",
              month: "short",
            })
            .replace(".", "");

        const startFormatted = formatDate(startDate);
        const endFormatted = endDate ? formatDate(endDate) : "Actual";

        return (
          <li class="experience-item">
            <article class="experience-card">
              <header class="experience-header">
                <div class="experience-titles">
                  <h3 class="company-name">{name}</h3>
                  <h4 class="job-position">{position}</h4>
                </div>
                <time class="experience-period">
                  {startFormatted} — {endFormatted}
                </time>
              </header>

              <div class="experience-content">
                <p class="job-summary">{summary}</p>
              </div>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 2rem; /* un poco menos de espacio para más armonía */
    padding: 0;
    margin: 0;
    list-style: none;
  }

  .experience-item {
    position: relative;
    padding-left: 1rem;
  }

  .experience-item:not(:last-child)::after {
    content: "";
    position: absolute;
    left: 0.5rem;
    top: 2rem;
    bottom: -2rem;
    width: 2px;
    background: linear-gradient(
      to bottom,
      #cbd5e1,
      #94a3b8
    ); /* degradado más moderno */
    border-radius: 2px;
  }

  .experience-card {
    background: linear-gradient(
      135deg,
      #ffffff,
      #f9fafb
    ); /* blanco con sutil gradiente */
    border-radius: 0.75rem; /* esquinas un poquito más redondeadas */
    padding: 1.2rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    transition: all 0.25s ease;
    border: 1px solid #e2e8f0;
  }

  .experience-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
    border-color: #3b82f6; /* acento en hover */
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .experience-titles {
    flex: 1;
  }

  .company-name {
    color: #1e293b;
    font-weight: 600;
    font-size: 1.15rem;
    margin: 0 0 0.25rem 0;
  }

  .job-position {
    color: #475569;
    font-weight: 500;
    font-size: 1rem;
    margin: 0;
  }

  .experience-period {
    color: #3b82f6; /* darle acento en azul moderno */
    font-size: 0.85rem;
    white-space: nowrap;
    padding: 0.2rem 0.5rem;
    border: 1px solid #bfdbfe;
    border-radius: 0.4rem;
    background: #eff6ff;
  }

  .job-summary {
    color: #334155;
    line-height: 1.6;
    margin: 0;
    font-size: 0.95rem;
  }

  @media (max-width: 700px) {
    .experience-header {
      flex-direction: column;
      gap: 0.25rem;
    }

    .experience-period {
      align-self: flex-start;
      font-size: 0.8rem;
    }

    .experience-item {
      padding-left: 1.25rem;
    }

    .experience-item::after {
      left: 0.375rem;
    }
  }

  @media print {
    .experience-list {
      gap: 1rem;
    }

    .experience-card {
      padding: 0.7rem;
      box-shadow: none;
      border: 1px solid #ccc;
      background: #fff;
    }

    .company-name {
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.2rem;
    }

    .job-position {
      font-size: 0.9rem;
      font-weight: 500;
    }

    .experience-period {
      font-size: 0.7rem;
      color: #555;
      background: none;
      border: none;
      padding: 0;
    }

    .job-summary {
      font-size: 0.8rem;
      line-height: 1.3;
    }

    .experience-header {
      margin-bottom: 0.5rem;
      gap: 0.5rem;
    }

    .experience-item {
      padding-left: 0.7rem;
    }

    .experience-item::after {
      left: 0.2rem;
    }
  }
</style>
