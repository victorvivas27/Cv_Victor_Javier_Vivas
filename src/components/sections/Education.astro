---
import Section from "../Section.astro";

import { education } from "@cv";
---

<Section title="Educación">
  <ul class="education-list">
    {
      education.map(({ institution, startDate, endDate, area, studyType }) => {
        const formatDate = (date: string | number | Date) =>
          new Date(date)
            .toLocaleDateString("es-ES", {
              year: "numeric",
              month: "short",
            })
            .replace(".", "");

        const startFormatted = formatDate(startDate);
        const endFormatted = endDate ? formatDate(endDate) : "Actual";

        return (
          <li class="education-item">
            <article class="education-card">
              <header class="education-header">
                <div>
                  <h3 class="institution">{institution}</h3>
                </div>
                <time class="education-period">
                  {startFormatted} - {endFormatted}
                </time>
              </header>

              <footer class="education-footer">
                <p class="education-area">{area}</p>
                <p class="education-type">{studyType}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  .education-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0;
    margin: 0;
    list-style: none;
  }

  .education-item {
    position: relative;
    padding-left: 1rem;
  }

  .education-item:not(:last-child)::after {
    content: "";
    position: absolute;
    left: 0.5rem;
    top: 2.5rem;
    bottom: -1.5rem;
    width: 2px;
    background: linear-gradient(to bottom, #cbd5e1, #94a3b8); /* más moderno */
    border-radius: 2px; /* evita borde duro */
  }

  .education-card {
    background: linear-gradient(
      135deg,
      #ffffff,
      #f9fafb
    ); /* igual que experiencia */
    border-radius: 0.75rem;
    padding: 1rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    transition:
      transform 0.25s ease,
      box-shadow 0.25s ease,
      border-color 0.25s ease;
    border: 1px solid #e2e8f0; /* borde neutro */
  }

  .education-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
    border-color: #3b82f6; /* acento en hover (match experiencia) */
  }

  .education-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .institution {
    font-weight: 600;
    color: #1e293b;
    font-size: 1.125rem;
    margin: 0;
  }

  .education-period {
    color: #3b82f6; /* acento azul */
    font-size: 0.875rem;
    white-space: nowrap;
    padding: 0.2rem 0.5rem; /* chip sutil */
    border: 1px solid #bfdbfe;
    border-radius: 0.4rem;
    background: #eff6ff;
  }

  .education-footer {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .education-area {
    color: #334155;
    font-weight: 500;
    margin: 0;
    font-size: 0.95rem;
  }

  .education-type {
    color: #64748b;
    font-size: 0.875rem;
    margin: 0;
  }

  @media (max-width: 700px) {
    .education-header {
      flex-direction: column;
      gap: 0.25rem;
    }

    .education-period {
      align-self: flex-start;
      font-size: 0.8rem;
    }

    .education-item {
      padding-left: 1rem;
    }

    .education-item::after {
      left: 0.25rem;
    }
  }

  @media print {
    .education-list {
      gap: 0.5rem;
    }

    .education-card {
      padding: 0.5rem;
      box-shadow: none;
      border: 1px solid #ccc;
      background: #fff;
    }

    .institution {
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.2rem;
    }

    .education-period {
      font-size: 0.7rem;
      color: #555;
      background: none;
      border: none;
      padding: 0;
    }

    .education-area {
      font-size: 0.8rem;
    }

    .education-type {
      font-size: 0.7rem;
    }

    .education-header {
      margin-bottom: 0.3rem;
      gap: 0.5rem;
    }

    .education-footer {
      gap: 0.2rem;
    }

    .education-item {
      padding-left: 0.5rem;
    }

    .education-item::after {
      left: 0.2rem;
    }
  }
</style>
